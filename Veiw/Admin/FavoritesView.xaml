        <!-- Details Icon Path Data -->
        <Geometry x:Key="DetailsIconData">M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z</Geometry>

        <!-- Style for Search TextBox -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="30,5,5,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Grid>
                                <Path Data="{StaticResource SearchIconData}"
                                      Width="16" Height="16"
                                      Fill="#B0B9C6"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Left"
                                      Margin="10,0,0,0"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                                <TextBlock Text="Search by title or author..."
                                           Foreground="#B0B9C6"
                                           Margin="30,0,0,0"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Filter ComboBox -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Background="{TemplateBinding Background}"
                                          Focusable="false"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="templateRoot"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter x:Name="contentPresenter"
                                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                  Content="{TemplateBinding Content}"
                                                                  ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                                                  Margin="{TemplateBinding Padding}"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                <Path x:Name="arrow"
                                                      Grid.Column="1"
                                                      Data="M0,0 L5,5 L10,0 Z"
                                                      Fill="#B0B9C6"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,0,10,0"
                                                      VerticalAlignment="Center"
                                                      Width="10"
                                                      Height="5"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="true">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="true"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide">
                                <Border x:Name="dropDownBorder"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        Background="White"
                                        CornerRadius="5"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{Binding ActualWidth, ElementName=ToggleButton}">
                                    <ScrollViewer x:Name="DropDownScrollViewer">
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Action Buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Details Button -->
        <Style x:Key="DetailsButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#008080"/>
        </Style>

        <!-- Style for PDF Button -->
        <Style x:Key="PdfButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#6200EE"/>
        </Style>

        <!-- Style for Message Button -->
        <Style x:Key="MessageButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#FF4081"/>
        </Style>

        <!-- Style for Remove Button -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#F44336"/>
        </Style>
        
        <!-- Modern DataGrid Button Style -->
        <Style x:Key="DataGridButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Pagination Buttons -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Refresh Button -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for DataGrid Column Headers -->
        <Style x:Key="FavoritesColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#006666"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Style for DataGrid Cells -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E6F2F2"/>
                    <Setter Property="Foreground" Value="#008080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="30,30,30,0">
            <TextBlock Text="My Favorites" 
                       FontSize="32" 
                       FontWeight="SemiBold" 
                       Foreground="#121518"/>
        </Grid>

        <!-- Content Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Margin="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Favorite Theses" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#008080" 
                           Margin="20,20,0,20"/>

                <!-- Search and Filter Section -->
                <Grid Grid.Row="1" Margin="20,0,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Search:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>

                    <TextBox x:Name="SearchTextBox" 
                             Grid.Column="1" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <ComboBox x:Name="TypeFilterComboBox" 
                              Grid.Column="3" 
                              Style="{StaticResource FilterComboBoxStyle}"
                              SelectionChanged="TypeFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Types" IsSelected="True"/>
                        <ComboBoxItem Content="Master"/>
                        <ComboBoxItem Content="Doctorat"/>
                    </ComboBox>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="FavoritesDataGrid" 
                          Grid.Row="2" 
                          Margin="20,0,20,20"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          RowHeaderWidth="0"
                          Background="Transparent"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          AlternatingRowBackground="#F9F9F9"
                          RowBackground="White"
                          ColumnHeaderStyle="{StaticResource FavoritesColumnHeaderStyle}"
                          CellStyle="{StaticResource CellStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding Id}" 
                                          Width="Auto"/>

                        <DataGridTextColumn Header="Title" 
                                          Binding="{Binding Titre}" 
                                          Width="*"/>

                        <DataGridTextColumn Header="Author" 
                                          Binding="{Binding Auteur}" 
                                          Width="*"/>

                        <DataGridTextColumn Header="Type" 
                                          Binding="{Binding Type}" 
                                          Width="Auto"/>

                        <DataGridTextColumn Header="Date" 
                                          Binding="{Binding Annee, StringFormat=\{0:dd/MM/yyyy\}}" 
                                          Width="Auto"/>

                        <DataGridTemplateColumn Header="Operations" 
                                              Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Details Button -->
                                        <Button Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="ViewDetails_Click"
                                                ToolTip="View Details"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial Kind="Information" 
                                                                 Foreground="#008080" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>

                                        <!-- PDF Button -->
                                        <Button Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="ViewPDF_Click"
                                                ToolTip="View PDF"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial Kind="FilePdfBox" 
                                                                 Foreground="#C0392B" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>

                                        <!-- Message Button -->
                                        <Button Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="SendMessage_Click"
                                                ToolTip="Send Message"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial Kind="MessageText" 
                                                                 Foreground="#FF4081" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>

                                        <!-- Remove from Favorites Button -->
                                        <Button Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="RemoveFromFavorites_Click"
                                                ToolTip="Remove from Favorites"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial Kind="HeartRemove" 
                                                                 Foreground="#F44336" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Section -->
                <Grid Grid.Row="3" Margin="20,0,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pagination Info -->
                    <TextBlock x:Name="PaginationInfoTextBlock" 
                               VerticalAlignment="Center">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="Showing {0}-{1} of {2} favorite theses">
                                <Binding Path="StartItem"/>
                                <Binding Path="EndItem"/>
                                <Binding Path="TotalItems"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <!-- Refresh Button -->
                    <Button Grid.Column="1" 
                            Content="Refresh" 
                            Style="{StaticResource RefreshButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="RefreshButton_Click"/>

                    <!-- Pagination Buttons -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="PreviousButton" 
                                Content="Previous" 
                                Style="{StaticResource PaginationButtonStyle}"
                                Click="PreviousButton_Click"/>

                        <Button x:Name="NextButton" 
                                Content="Next" 
                                Style="{StaticResource PaginationButtonStyle}"
                                Click="NextButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
