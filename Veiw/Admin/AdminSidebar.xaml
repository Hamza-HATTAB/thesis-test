<UserControl x:Class="DataGridNamespace.Admin.AdminSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             Background="#2C3E50">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/WindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo/Title -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Thesis Management" 
                     Foreground="White" 
                     FontSize="24" 
                     FontWeight="Bold"/>
            <TextBlock Text="System" 
                     Foreground="#3498DB" 
                     FontSize="18"/>
        </StackPanel>

        <!-- Navigation Menu -->
        <StackPanel Grid.Row="1" Margin="10">
            <Button Style="{StaticResource menuButton}" 
                    Click="DashboardButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📊" 
                             Style="{StaticResource menuButtonIcon}"/>
                    <TextBlock Text="Dashboard"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource menuButton}" 
                    Click="ThesisButton_Click" Margin="0,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📚" 
                             Style="{StaticResource menuButtonIcon}"/>
                    <TextBlock Text="Thesis Management"/>
                </StackPanel>
            </Button>
            
            <Button Style="{StaticResource menuButton}" 
                    Click="FavoritesButton_Click" Margin="0,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="❤" 
                             Style="{StaticResource menuButtonIcon}"/>
                    <TextBlock Text="Favorites"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource menuButton}" 
                    Click="MembersManagementButton_Click" Margin="0,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👥" 
                             Style="{StaticResource menuButtonIcon}"/>
                    <TextBlock Text="Members Management"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource menuButton}" 
                    Click="ProfileButton_Click" Margin="0,5,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👤" 
                             Style="{StaticResource menuButtonIcon}"/>
                    <TextBlock Text="Profile"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Logout Button -->
        <Button Grid.Row="2" 
                Style="{StaticResource menuButton}" 
                Click="LogoutButton_Click"
                Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🚪" 
                         Style="{StaticResource menuButtonIcon}"/>
                <TextBlock Text="Logout"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl> 