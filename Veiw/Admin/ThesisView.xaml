<UserControl x:Class="DataGridNamespace.Admin.ThesisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:DataGridNamespace.Admin"
             xmlns:controls="clr-namespace:DataGridNamespace.Controls"
             Background="#EFF2F7"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d" 
             x:ClassModifier="public">

    <UserControl.Resources>
        <!-- Only one style for column headers to avoid key conflicts -->
        
        <!-- Style for Rows -->
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Padding" Value="0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0F2F1"/>
                </Trigger>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#B2DFDB"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style for Cells -->
        <Style x:Key="ColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#006064"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,1,2"/>
            <Setter Property="BorderBrush" Value="#004D40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Margin="{TemplateBinding Padding}" 
                                                  VerticalAlignment="Center" 
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True"
                                CornerRadius="2">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#006064"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search Icon Path Data -->
        <Geometry x:Key="SearchIconData">M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z</Geometry>

        <!-- PDF Icon Path Data -->
        <Geometry x:Key="PdfIconData">M8,2H16A2,2 0 0,1 18,4V20A2,2 0 0,1 16,22H8A2,2 0 0,1 6,20V4A2,2 0 0,1 8,2M12,4A1.5,1.5 0 0,0 10.5,5.5A1.5,1.5 0 0,0 12,7A1.5,1.5 0 0,0 13.5,5.5A1.5,1.5 0 0,0 12,4M7,9V10H17V9H7M7,11V12H17V11H7M7,13V14H14V13H7Z</Geometry>

        <!-- Message Icon Path Data -->
        <Geometry x:Key="MessageIconData">M20,2H4A2,2 0 0,0 2,4V22L6,18H20A2,2 0 0,0 22,16V4A2,2 0 0,0 20,2M20,16H6L4,18V4H20V16Z</Geometry>

        <!-- Empty Favorite Icon Path Data (Star Outline) -->
        <Geometry x:Key="EmptyFavoriteIconData">M12,15.39L8.24,17.66L9.23,13.38L5.91,10.5L10.29,10.13L12,6.09L13.71,10.13L18.09,10.5L14.77,13.38L15.76,17.66M22,9.24L14.81,8.63L12,2L9.19,8.63L2,9.24L7.45,13.97L5.82,21L12,17.27L18.18,21L16.54,13.97L22,9.24Z</Geometry>
        
        <!-- Filled Favorite Icon Path Data (Star Filled) -->
        <Geometry x:Key="FilledFavoriteIconData">M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z</Geometry>

        <!-- Details Icon Path Data -->
        <Geometry x:Key="DetailsIconData">M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z</Geometry>
        
        <!-- Style for Action Buttons -->
        <Style x:Key="DataGridButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Name="ButtonBorder">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#4DB6AC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#00897B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Search TextBox -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="30,5,5,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <Grid>
                                <Path Data="{StaticResource SearchIconData}"
                                      Width="16" Height="16"
                                      Fill="#B0B9C6"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Left"
                                      Margin="10,0,0,0"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                                <TextBlock Text="Search by title or author..."
                                           Foreground="#B0B9C6"
                                           Margin="30,0,0,0"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Filter ComboBox -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Background="{TemplateBinding Background}"
                                          Focusable="false"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="templateRoot"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter x:Name="contentPresenter"
                                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                  Content="{TemplateBinding Content}"
                                                                  ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                                                  Margin="{TemplateBinding Padding}"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                <Path x:Name="arrow"
                                                      Grid.Column="1"
                                                      Data="M0,0 L5,5 L10,0 Z"
                                                      Fill="#B0B9C6"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,0,10,0"
                                                      VerticalAlignment="Center"
                                                      Width="10"
                                                      Height="5"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="true">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="true"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide">
                                <Border x:Name="dropDownBorder"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        Background="White"
                                        CornerRadius="5"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{Binding ActualWidth, ElementName=ToggleButton}">
                                    <ScrollViewer x:Name="DropDownScrollViewer">
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Action Buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Details Button -->
        <Style x:Key="DetailsButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#008080"/>
        </Style>

        <!-- Style for PDF Button -->
        <Style x:Key="PdfButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#6200EE"/>
        </Style>

        <!-- Style for Message Button -->
        <Style x:Key="MessageButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#FF4081"/>
        </Style>

        <!-- Style for Favorite Button -->
        <Style x:Key="FavoriteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#FF9800"/>
        </Style>

        <!-- Style for Pagination Buttons -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Add Thesis Button -->
        <Style x:Key="AddThesisButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3700B3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Refresh Button -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for DataGrid Column Headers -->
        <Style x:Key="ThesisColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#006666"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Style for DataGrid Detail Cells -->
        <Style x:Key="ThesisDetailCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E6F2F2"/>
                    <Setter Property="Foreground" Value="#008080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="30,30,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Thesis Management" 
                       FontSize="32" 
                       FontWeight="SemiBold" 
                       Foreground="#121518"/>

            <Button Grid.Column="1" 
                    Content="Add Thesis" 
                    Style="{StaticResource AddThesisButtonStyle}"
                    Click="AddThesis_Click"/>
        </Grid>

        <!-- Content Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Margin="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="All Theses" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#008080" 
                           Margin="20,20,0,20"/>

                <!-- Search and Filter Section -->
                <Grid Grid.Row="1" Margin="20,0,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Search:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>

                    <TextBox x:Name="SearchTextBox" 
                             Grid.Column="1" 
                             Style="{StaticResource SearchTextBoxStyle}"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <ComboBox x:Name="TypeFilterComboBox" 
                              Grid.Column="3" 
                              Style="{StaticResource FilterComboBoxStyle}"
                              SelectionChanged="TypeFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="All Types" IsSelected="True"/>
                        <ComboBoxItem Content="Master"/>
                        <ComboBoxItem Content="Doctorat"/>
                    </ComboBox>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="ThesesDataGrid" 
                          Grid.Row="2" 
                          Margin="20,0,20,20"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          RowHeaderWidth="0"
                          Background="Transparent"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          AlternatingRowBackground="#F9F9F9"
                          RowBackground="White"
                          ColumnHeaderStyle="{StaticResource ThesisColumnHeaderStyle}"
                          CellStyle="{StaticResource ThesisDetailCellStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding Id}" 
                                          Width="Auto"/>

                        <DataGridTextColumn Header="Title" 
                                          Binding="{Binding Titre}" 
                                          Width="3*"/>

                        <DataGridTextColumn Header="Author" 
                                          Binding="{Binding Auteur}" 
                                          Width="2*"/>

                        <DataGridTextColumn Header="Specialty" 
                                          Binding="{Binding Speciality}" 
                                          Width="2*"/>

                        <DataGridTextColumn Header="Type" 
                                          Binding="{Binding Type}" 
                                          Width="1.2*"/>

                        <DataGridTextColumn Header="Year" 
                                          Binding="{Binding DatePublication, StringFormat=\{0:yyyy\}}" 
                                          Width="Auto"/>

                        <DataGridTemplateColumn Header="Operations" 
                                              Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!-- Details Button -->
                                        <Button Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="ViewDetails_Click"
                                                ToolTip="View Details"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial Kind="Information" 
                                                                 Foreground="#008080" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>

                                        <!-- PDF Button -->
                                        <Button Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="ViewPDF_Click"
                                                ToolTip="View PDF"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial Kind="FilePdfBox" 
                                                                 Foreground="#C0392B" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>

                                        <!-- Message Button -->
                                        <Button Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="SendMessage_Click"
                                                ToolTip="Send Message"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial Kind="MessageText" 
                                                                 Foreground="#FF4081" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>

                                        <!-- Add to Favorites Button -->
                                        <Button x:Name="FavoriteButton"
                                                Style="{StaticResource DataGridButtonStyle}"
                                                Tag="{Binding}"
                                                Click="OnAddToFavorites"
                                                ToolTip="Add to Favorites"
                                                Margin="3,0">
                                            <Icon:PackIconMaterial x:Name="FavoriteIcon"
                                                                 Kind="HeartOutline" 
                                                                 Foreground="#808080" 
                                                                 Width="18" 
                                                                 Height="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Section -->
                <Grid Grid.Row="3" Margin="20,0,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Previous Page Button -->
                    <Button Grid.Column="0"
                            Style="{StaticResource PaginationButtonStyle}"
                            Click="OnPreviousPage_Click"
                            ToolTip="Previous Page"
                            Margin="0,0,10,0">
                        <Path Data="M10,15 L15,10 L10,5 M15,10 L5,10" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>

                    <!-- Page Info -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding Path=CurrentPage, StringFormat='Page {0} of {TotalPages}'}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="14"
                              Foreground="#006064"/>

                    <!-- Next Page Button -->
                    <Button Grid.Column="2"
                            Style="{StaticResource PaginationButtonStyle}"
                            Click="OnNextPage_Click"
                            ToolTip="Next Page"
                            Margin="10,0,0,0">
                        <Path Data="M5,15 L10,10 L5,5 M10,10 L15,10" 
                              Fill="White" 
                              Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
