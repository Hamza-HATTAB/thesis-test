<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="DataGridNamespace.Controls.PlatformIconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    
    <UserControl.Resources>
        <Style x:Key="FallbackTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!-- Windows-specific icons will be loaded here at runtime -->
        <ContentControl x:Name="IconContainer" />
    </Grid>
</UserControl>
